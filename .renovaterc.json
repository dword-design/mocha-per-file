{
  "extends": [
    ":semanticCommits"
  ],
  "labels": [
    "maintenance"
  ],
  "packageRules": [
    {
      "packagePatterns": [
        "*"
      ],
      "semanticCommitType": "chore"
    },
    {
      "depTypeList": [
        "dependencies",
        "devDependencies",
        "peerDependencies",
        "optionalDependencies"
      ],
      "semanticCommitType": "fix"
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": "before 10am on monday"
  }
}
