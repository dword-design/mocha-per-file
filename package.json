{
  "name": "mocha-per-file",
  "version": "1.2.0",
  "repository": "https://github.com/dword-design/mocha-per-file",
  "author": "Sebastian Landwehr <info@dword-design.de>",
  "description": "This CLI tool allows to organize mocha tests in files and directories. It works by traversing the test directory recursively, creating describe blocks per directory and tests per *.test.js file.",
  "license": "MIT",
  "main": "dist/index.js",
  "bin": {
    "mocha-per-file": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "chdir",
    "cli",
    "cwd",
    "describe",
    "directory",
    "file",
    "folder",
    "it",
    "mocha",
    "manage",
    "recursive",
    "organize",
    "test",
    "testing",
    "tree"
  ],
  "scripts": {
    "prepare": "base-node prepare",
    "test": "base-node test"
  },
  "dependencies": {
    "chdir": "dword-design/node-chdir#fork",
    "glob-promise": "^3.4.0",
    "mocha": "^6.2.2"
  },
  "devDependencies": {
    "@dword-design/base-node": "^0.4.4",
    "expect": "^24.9.0",
    "output-files": "^1.1.7",
    "resolve-bin": "^0.4.0",
    "with-local-tmp-dir": "^2.2.0"
  }
}
